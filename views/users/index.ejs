<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
  </head>
  <body>
    <%- include('../components/navbar.ejs') %>
    <h1>Daftar User</h1>
    <a href="/users/form_add">Tambah User</a>
    <% if(users.length > 0) { %>
    <ul>
      <% users.forEach((user) => { %>
      <li><%= user.name %> | <%= user.email %> | <a href="/users/detail/<%= user.id %>">detail</a></li>
      <% }) %>
    </ul>
    <% } else { %>
    <h2>Tidak user yang dapat ditampilkan</h2>
    <% } %>
  </body>
</html>
